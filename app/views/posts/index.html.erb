<div class="body container-fluid">
<div class="col-md-12">
  <div class="row">

  <!-- last blog post -->
  <div class="col-md-8">
    <a href="<%= post_path(@last_post) %>" style="text-decoration: none;">
    <center><%= link_to image_tag(@last_post.image.url(:medium), class: 'img-responsive img-rounded blogimg'), post_path(@last_post) %></center>
    <div class="container-fluid">

    <% like = @last_post.likes.find_by(user: current_user) %>

    <span class="pfont pull-left" style="font-size: 20px;"><%= pluralize(@last_post.likes.count, 'Like') %></span>


    <span class="glyphicon glyphicon-bookmark pull-right grow" style="color: SkyBlue; font-size: 25px;" aria-hidden="true"></span>
    </div>
    <a href="<%= post_path(@last_post) %>" style="text-decoration: none;">
    <div class="alert alert-info">
      <center><h1 class="pfont titletext" style="width: 50%;"><%= @last_post.title %></h1></center>
      <br>
      <%= truncate(@last_post.body, length: 150) %>
      <hr>
      <p>Written By: <strong><%= @last_post.user.full_name %></strong></p>
      <p>Post Created On: <strong><%= @last_post.created_at %></strong></p>
      <p>Total Reviews: <strong><%= @last_post.reviews.count %></strong></p>
    </div>
    </a>
  </div>




  <!-- SideBar -->
  <div class="col-md-4 hidden-md hidden-sm hidden-xs ">

    <h1 class="blue" style="text-align:center; font-size: 25px; font-family: impact;"><span class="glyphicon glyphicon-thumbs-up" style="color: SkyBlue" aria-hidden="true"></span><span style="font-size: 30px;">  Most Liked:</h1></span>

    <div class="list-group" id="mostlike">
      <div class="list-group-item list-group-item-action flex-column align-items-start" >
      <% @mostlike.each do |post| %>

              <a href="<%= post_path(post) %>" style="text-decoration: none;">
                  <center><h2>
                    <p class="pfont titletext"><%= post.title %></p>
                    <div class="fa fa-plane" style="color: SkyBlue; font-size: 20px;" aria-hidden="true">
                      <span class="pfont" style="font-size: 20px;">&nbsp<%= pluralize(post.likes.count, 'Like') %></span>
                    </div>
                  </h2></center>

                  <p style="color:black;"><%= truncate( post.body, length: 150) %></p>

                <p>Written By: <strong><%= post.user.full_name %></strong></p>
                <p>Post Created On: <strong><%= post.created_at %></strong></p>
                <p>Total Reviews: <strong><%= post.reviews.count %></strong></p>
                <hr>
            </a>
      <% end %>
      </div>
      </div>
    </div>

  </div>
</div>


<!-- Blog Post Display -->
<div class="col-md-12">
  <% @posts.each_slice(3) do |group| %>
    <div class="row">
      <hr>
      <% group.each do |post| %>
        <div class="col-md-4">
          <a href="<%= post_path(post) %>" style="text-decoration: none;">

          <% image = ["img1.jpg", "img2.jpg", "img3.jpg", "img4.jpg", "img5.jpg", "img6.jpg", "img7.jpg", "img12.jpg", "img9.jpg", "img10.jpg", "img12.jpg" , "img15.jpg "].sample%>

          <img class = "img-responsive img-rounded blogimg" src = "assets/<%= image %>"></a>

          <div class="container-fluid">
          <span class="pfont pull-left" style="font-size: 20px;"><%= pluralize(post.likes.count, 'Like') %></span>

          <span class="glyphicon glyphicon-bookmark pull-right grow" style="color: SkyBlue; font-size: 25px;" aria-hidden="true"></span>
          </div>
          <a href="<%= post_path(post) %>" style="text-decoration: none;">
          <div class="alert alert-info">
              <center><h1 class="pfont titletext"><%= post.title %></h1></center>
              <br>
              <%= truncate( post.body, length: 150) %>
              <hr>
            <p>Written By: <strong><%= post.user.full_name %></strong></p>
            <p>Post Created On: <strong><%= post.created_at %></strong> </p>
            <p>Total Reviews: <strong><%= post.reviews.count %></strong></p>
          </div>
        </a>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

  <div class="col-md-4">



  </div>


</div>
</div>
